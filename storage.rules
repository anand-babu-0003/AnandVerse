rules_version = '2';

// Firebase Storage Security Rules for Image Uploads
// This file should be deployed to Firebase Storage

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to all images for public viewing
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Portfolio images - allow uploads for testing (temporarily open)
    match /portfolio-images/{imageId} {
      allow write: if request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*')
        && imageId.matches('.*\\.(jpg|jpeg|png|gif|webp|avif|svg|bmp|tiff|ico)$');
    }
    
    // Blog images - allow uploads for testing (temporarily open)
    match /blog-images/{imageId} {
      allow write: if request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*')
        && imageId.matches('.*\\.(jpg|jpeg|png|gif|webp|avif|svg|bmp|tiff|ico)$');
    }
    
    // General images folder - allow authenticated users to upload
    match /images/{imageId} {
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*')
        && imageId.matches('.*\\.(jpg|jpeg|png|gif|webp|avif|svg|bmp|tiff|ico)$');
    }
    
    // Admin uploads - more restrictive, requires authentication
    match /admin-uploads/{imageId} {
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*')
        && imageId.matches('.*\\.(jpg|jpeg|png|gif|webp|avif|svg|bmp|tiff|ico)$');
    }
    
    // Temporary uploads - allow authenticated users, auto-cleanup recommended
    match /temp/{imageId} {
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*')
        && imageId.matches('.*\\.(jpg|jpeg|png|gif|webp|avif|svg|bmp|tiff|ico)$');
    }
    
    // Deny all other write operations
    match /{allPaths=**} {
      allow write: if false;
    }
  }
}
